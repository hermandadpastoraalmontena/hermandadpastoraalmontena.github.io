---
import mail from "@/assets/svg/mail.svg";
import mapPin from "@/assets/svg/map_pin.svg";
import phone from "@/assets/svg/phone.svg";
const currentLang = Astro.currentLocale || "es";
---

<aside
  class="pb-10 mt-10 w-full gap-8 flex flex-col lg:flex-row justify-center place-items-center"
>
  <div
    class="flex flex-col p-8 w-72 md:w-[30rem] border-2 rounded-2xl border-black"
  >
    <div class="flex flex-col gap-2">
      <h2 class="text-lg lg:text-2xl text-center font-bold mb-4 drop-shadow-lg">
        {currentLang === "cat" ? "Contacte" : "Contacto"}
      </h2>
      <div class="flex flex-row gap-2 justify-center place-items-center">
        <img
          src={mapPin.src}
          alt={currentLang === "cat" ? "Direcció" : "Dirección"}
          class="w-6 h-6"
        />
        <p class="text-sm">
          {
            currentLang === "cat"
              ? `Carrer Clavells, 2-4, L'Hospitalet de Llobregat`
              : `Calle Claveles, 2-4, L'Hospitalet de Llobregat`
          }
        </p>
      </div>
      <div class="flex flex-row gap-2 justify-center place-items-center">
        <img
          src={phone.src}
          alt={currentLang === "cat" ? "Telèfon" : "Teléfono"}
          class="w-6 h-6"
        />
        <p class="text-sm">687 561 047</p>
      </div>
      <div class="flex flex-row gap-2 justify-center place-items-center">
        <img
          src={mail.src}
          alt={currentLang === "cat"
            ? "Correu electrònic"
            : "Correo electrónico"}
          class="w-6 h-6"
        />
        <p class="text-sm">pastoraalmonte@hotmail.com</p>
      </div>
    </div>
  </div>

  <div class="p-8 w-72 md:w-[30rem] border-2 rounded-2xl border-black">
    <h2 class="text-lg lg:text-2xl text-center font-bold mb-4 drop-shadow-lg">
      {currentLang === "cat" ? "Xarxes Socials" : "Redes Sociales"}
    </h2>
    <ul id="rrss" class="flex-col gap-2 items-center flex">
      <li>
        <a
          href="https://www.facebook.com/hermandadpastoraalmontena/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-row gap-[4px] place-items-center hover:scale-105 transition ease-in-out hover:text-[#337FFF]"
        >
          <svg
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            data-name="Layer 1"
            class="fill-current w-6 h-6"
            id="facebook"
            ><path
              d="M20.9,2H3.1A1.1,1.1,0,0,0,2,3.1V20.9A1.1,1.1,0,0,0,3.1,22h9.58V14.25h-2.6v-3h2.6V9a3.64,3.64,0,0,1,3.88-4,20.26,20.26,0,0,1,2.33.12v2.7H17.3c-1.26,0-1.5.6-1.5,1.47v1.93h3l-.39,3H15.8V22h5.1A1.1,1.1,0,0,0,22,20.9V3.1A1.1,1.1,0,0,0,20.9,2Z"
            ></path>
          </svg>
          <span class="font-semibold">Facebook</span>
        </a>
      </li>
      <li>
        <a
          href="https://www.instagram.com/hermandadpastoraalmontena/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-row gap-[4px] place-items-center hover:scale-105 transition ease-in-out hover:text-[#C13584]"
        >
          <svg
            width="30px"
            height="30px"
            viewBox="-2 -2 24 24"
            xmlns="http://www.w3.org/2000/svg"
            preserveAspectRatio="xMinYMin"
            class="fill-current hover:scale-105 w-6 h-6"
            id="instagram"
            ><path
              d="M14.017 0h-8.07A5.954 5.954 0 0 0 0 5.948v8.07a5.954 5.954 0 0 0 5.948 5.947h8.07a5.954 5.954 0 0 0 5.947-5.948v-8.07A5.954 5.954 0 0 0 14.017 0zm3.94 14.017a3.94 3.94 0 0 1-3.94 3.94h-8.07a3.94 3.94 0 0 1-3.939-3.94v-8.07a3.94 3.94 0 0 1 3.94-3.939h8.07a3.94 3.94 0 0 1 3.939 3.94v8.07z"
            ></path><path
              d="M9.982 4.819A5.17 5.17 0 0 0 4.82 9.982a5.17 5.17 0 0 0 5.163 5.164 5.17 5.17 0 0 0 5.164-5.164A5.17 5.17 0 0 0 9.982 4.82zm0 8.319a3.155 3.155 0 1 1 0-6.31 3.155 3.155 0 0 1 0 6.31z"
            ></path><circle cx="15.156" cy="4.858" r="1.237"></circle></svg
          >
          <span class="font-semibold">Instagram</span>
        </a>
      </li>
      <li>
        <a
          href="https://x.com/pastoralmontena/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-row gap-[4px] place-items-center hover:scale-105 transition ease-in-out hover:text-opacity-70"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            version="1.1"
            id="x"
            width="26px"
            height="26px"
            viewBox="0 0 24 24"
            style="enable-background:new 0 0 24 24;"
            class="fill-current hover:scale-105 w-6 h-6"
            xml:space="preserve"
            ><path
              d="M14.095479,10.316482L22.286354,1h-1.940718l-7.115352,8.087682L7.551414,1H1l8.589488,12.231093L1,23h1.940717  l7.509372-8.542861L16.448587,23H23L14.095479,10.316482z M11.436522,13.338465l-0.871624-1.218704l-6.924311-9.68815h2.981339  l5.58978,7.82155l0.867949,1.218704l7.26506,10.166271h-2.981339L11.436522,13.338465z"
            ></path></svg
          >
          <span class="font-semibold">X</span>
        </a>
      </li>
    </ul>
  </div>
</aside>
